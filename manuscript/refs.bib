@article{acevedo2020,
  title = {Teaching Quantitative Ecology Online: {{An}} Evidence-Based Prescription of Best Practices},
  shorttitle = {Teaching Quantitative Ecology Online},
  author = {Acevedo, Miguel A.},
  year = {2020},
  journal = {Ecology and Evolution},
  volume = {10},
