@article{farrell2018,
  title = {Power, Pitfalls, and Potential for Integrating Computational Literacy into Undergraduate Ecology Courses},
  author = {Farrell, Kaitlin J. and Carey, Cayelan C.},
  year = {2018},
  journal = {Ecology and Evolution},
  volume = {8},
