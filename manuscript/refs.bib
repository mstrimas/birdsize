}

@article{hocking2013,
  title = {Salmon Subsidize an Escape from a Size Spectrum},
  author = {Hocking, Morgan D. and Dulvy, Nicholas K. and Reynolds, John D. and Ring, Richard A. and Reimchen, Thomas E.},
