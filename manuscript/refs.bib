@article{arribas2021,
  title = {The Limited Spatial Scale of Dispersal in Soil Arthropods Revealed with Whole-Community Haplotype-Level Metabarcoding},
  author = {Arribas, Paula and And{\'u}jar, Carmelo and {Salces-Castellano}, Antonia and Emerson, Brent C. and Vogler, Alfried P.},
