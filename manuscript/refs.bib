  shorttitle = {Population Change in Breeding Boreal Waterbirds in a 25-Year Perspective},
  author = {Elmberg, Johan and Arzel, Celine and Gunnarsson, Gunnar and Holopainen, Sari and Nummi, Petri and P{\"o}ys{\"a}, Hannu and Sj{\"o}berg, Kjell},
